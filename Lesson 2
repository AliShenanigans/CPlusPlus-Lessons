#include <iostream>
using namespace std;
// input-output stream
int myVar = 5.6;
// note that int rounds down always 

float pi = 3.14;


int main()
{
cout << myVar <<"  " << pi;
cout << " ";

cout << " sum= " << myVar*pi;
}


